{
    /* --- EDITOR --- */
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.fontFamily": "FiraCode-Retina, Menlo, Monaco, 'Courier New', monospace",
    // "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.bracketPairColorization.enabled": false,
    "editor.minimap.enabled": false,
    "editor.fontSize": 14,
    "editor.lineNumbers": "on",
    "editor.glyphMargin": false,
    "editor.showFoldingControls": "never",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.guides.indentation": true,
    "editor.fontLigatures": true,
    "editor.rulers": [
        79,
        88
    ],
    "editor.matchBrackets": "never",
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": false,
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "blink",
    "editor.codeLens": false,
    /* --- WINDOW --- */
    "window.restoreWindows": "none",
    /* --- WORKBENCH --- */
    "workbench.editor.labelFormat": "short",
    "workbench.editor.showIcons": false,
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.showTabs": false,
    "workbench.layoutControl.enabled": false,
    "workbench.editor.centeredLayoutFixedWidth": true,
    "workbench.iconTheme": "vs-minimal",
    "workbench.tree.indent": 15,
    "workbench.tips.enabled": false,
    "workbench.preferredLightColorTheme": "Solarized Light",
    "workbench.tree.renderIndentGuides": "none",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#073642",
        "editorBracketHighlight.foreground1": "#586e75",
        "sideBar.background": "#002b36",
        // "tab.activeForeground": "#586e75",
        "sideBar.border": "#002b36",
        "titleBar.activeBackground": "#002b36",
        // "editorGroup.border": "#fdf6e3",
        "scrollbar.shadow": "#002b36",
        // "scrollbar.shadow": "#eee8d5",
        "editorLineNumber.foreground": "#073642",
        "editorLineNumber.activeForeground": "#586e75",
        "editorIndentGuide.background1": "#073642",
        "editorIndentGuide.activeBackground1": "#073642",
        // "editorIndentGuide.background1": "#eee8d5",
        // "editorIndentGuide.activeBackground1": "#fdf6e3",
        "editorGutter.background": "#002b36",
        "[Solarized Dark]": {
            "editorInlayHint.foreground": "#586e75",
            "editorInlayHint.background": "#002b36",
        },
        // "editorError.foreground": "#002b36",
        // "editorWarning.foreground": "#002b36",
        "editorError.foreground": "#eee8d5",
        "editorWarning.foreground": "#eee8d5",
    },
    /* --- ZEN MODE --- */
    "zenMode.fullScreen": false,
    "zenMode.centerLayout": true,
    "zenMode.hideActivityBar": true,
    "zenMode.hideStatusBar": true,
    "zenMode.hideTabs": true,
    "zenMode.hideLineNumbers": false,
    /* --- PYTHON --- */
    "python.languageServer": "Pylance",
    "[python]": {
        "editor.formatOnType": false /* Fixes an indentation bug*/
    },
    "python.analysis.packageIndexDepths": [
        {
            "name": "sqlalchemy",
            "depth": 3
        },
    ],
    "window.commandCenter": false,
    "window.title": " ", /* Hack to remove window title */
    "workbench.colorTheme": "Solarized Dark",
    "workbench.preferredDarkColorTheme": "Solarized Dark",
    "breadcrumbs.filePath": "off",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "ruff.enable": false,
    "workbench.activityBar.visible": false,
    "files.autoSave": "afterDelay",
    "workbench.statusBar.visible": false,
    "window.zoomLevel": 2,
}
